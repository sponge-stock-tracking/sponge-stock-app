# ============================================
# SUPABASE DATABASE CONNECTION
# ============================================
# Get this from Supabase Dashboard:
# Project Settings → Database → Connection string → URI
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxxx:your-password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_in_production_use_generated_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# APPLICATION
# ============================================
APP_NAME=Sponge Stock API
APP_ENV=production
LOG_LEVEL=INFO

# ============================================
# CORS - Allowed Origins
# ============================================
# Add your Vercel frontend URL here
# Format: https://your-app.vercel.app,http://localhost:3000
CORS_ORIGINS=https://sponge-stock-app.vercel.app,http://localhost:3000

# (Opsiyonel) Mail
MAIL_USERNAME=example@gmail.com
MAIL_PASSWORD=app-password
MAIL_FROM=example@gmail.com

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASSWORD=app-password
